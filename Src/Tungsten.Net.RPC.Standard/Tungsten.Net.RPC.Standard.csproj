<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
    <RootNamespace>W.Net.RPC</RootNamespace>
    <Authors>Jordan Duerksen</Authors>
    <Company />
    <Description>Tungsten.Net.RPC is a socket library which allows clients to execute functionality (with or without return values) on a server (the server must be a Tungsten.Net.RPC server). Tungsten.Net.RPC uses two-way encryption via public/private key pairs to secure the transmission.  The client calls methods on the server via the MakeRPCCall method.  The server implements RPC methods by using the RPCMethod attribute (or added manually).</Description>
    <Copyright>Copyright @ 2017 Jordan Duerksen</Copyright>
    <ApplicationIcon>Tungsten.ico</ApplicationIcon>
    <Version>2.0.0</Version>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <PackageProjectUrl>https://github.com/mode51/Tungsten</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/mode51/Tungsten/master/Src/Tungsten/Tungsten.ico</PackageIconUrl>
    <PackageTags>Tungsten.Net.RPC Tungsten Tungsten.Net RPC client server remote procedure call c# library</PackageTags>
    <PackageLicenseUrl>https://raw.githubusercontent.com/mode51/Tungsten/master/LICENSE</PackageLicenseUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <AssemblyName>Tungsten.Net.RPC</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard1.4\Tungsten.Net.RPC.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD1_5</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Archive\Client.cs" />
    <Compile Remove="Archive\ExceptionInformation.cs" />
    <Compile Remove="Archive\RPCHandle.cs" />
    <Compile Remove="Archive\RPCResult.cs" />
    <Compile Remove="Archive\RPCServer.cs" />
    <Compile Remove="Archive\Waiter.cs" />
    <Compile Remove="ExceptionInformation.cs" />
    <Compile Remove="RPCHandle.cs" />
    <Compile Remove="RPCResult.cs" />
    <Compile Remove="RPCServer.cs" />
    <Compile Remove="Waiter.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Archive\Client.cs" />
    <None Include="Archive\ExceptionInformation.cs" />
    <None Include="Message.cs" />
    <None Include="Archive\RPCServer.cs" />
    <None Include="Archive\Waiter.cs" />
    <None Include="Archive\RPCHandle.cs" />
    <None Include="Archive\RPCResult.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
    <PackageReference Include="System.Reflection" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Extensions" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Primitives" Version="4.3.0" />
    <PackageReference Include="System.Reflection.TypeExtensions" Version="4.3.0" />
    <PackageReference Include="Tungsten" Version="2.0.0" />
    <PackageReference Include="Tungsten.Net" Version="1.3.0" />
  </ItemGroup>

</Project>